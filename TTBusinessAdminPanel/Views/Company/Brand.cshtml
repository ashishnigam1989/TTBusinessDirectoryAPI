@model CommonService.RequestModel.CompanyBrandRequestModel;
@{
    ViewData["Title"] = "Brand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Company Brand</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">Masters</li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Company")">Company</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Brand", "Company")">Brand</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <form id="addcompanycategoryform" asp-controller="Company" asp-action="AddUpdateCompanyBrand">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div>
                                    <input type="hidden" id="Id" name="Id" asp-for="Id" />


                                    <select asp-for="CompanyId" name="CompanyId" class="show-tick">
                                        <option value="">Select Company</option>
                                        @foreach (var company in @ViewBag.Companies)
                                        {
                                            <option value="@company.Value">@company.Text</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div>
                                    <select asp-for="BrandId" name="BrandId" class="show-tick">
                                        <option value="">Select Brand</option>
                                        @foreach (var category in @ViewBag.Brands)
                                        {
                                            <option value="@category.Value">@category.Text</option>
                                        }

                                    </select>
                                </div>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4"> 
                                <div class="form-group form-float"> 
                                    <input type="checkbox" asp-for="IsPublished" id="IsPublished" name="IsPublished">
                                    <label for="IsPublished" class="form-label">IsPublished</label>
                                    </div>
                                    <span asp-validation-for="IsPublished" class="text-danger"></span>
                                 
                        </div>
                    </div>

                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                </form>

            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <table id="companycategory-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Company Name</th>
                            <th>Brand Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#companycategory-datatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Company/GetAllCompanyBrand",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },
                    { "data": "company", "name": "Company Name", "autoWidth": true },
                    { "data": "brand", "name": "Brand Name", "autoWidth": true },
                    {
                        "render": function (data, row, d) {
                            return "<a href='/Company/EditCompanyBrand/" + d.id + "' class='icon' title='Edit'><i class='zmdi zmdi-edit'></i></a> | " +
                                "<a href='/Company/DeleteCompanyBrand/" + d.id + "' class='icon' style='color:red' title='Delete'><i class='zmdi zmdi-delete'></i></a>";
                        }
                    }
                ]
            });
        });
    </script>
}

