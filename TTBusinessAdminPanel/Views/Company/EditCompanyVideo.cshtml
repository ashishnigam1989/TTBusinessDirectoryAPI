@model CommonService.RequestModel.CompanyVideoRequestModel
@{
    ViewData["Title"] = "Edit Video";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Add Video</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Company")">Company</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("CompanyVideo", "Company")">Company Video</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("EditCompanyVideo", "Company")">Edit Video</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Add Video</h2>
            </div>
            <div class="body">
                <form id="addTeamform" asp-controller="Company" asp-action="AddUpdateCompanyVideo">

                    <div class="row col-md-12">

                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <select asp-for="CompanyId" name="CompanyId" class="show-tick" required>
                                            <option value="">Select Company</option>
                                            @foreach (var company in @ViewBag.Companies)
                                            {
                                                <option value="@company.Value">@company.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                                </div>
                                <div class="form-line focused">
                                    <input asp-for="VideoNameEng" type="text" class="form-control" name="VideoNameEng" required>
                                    <label class="form-label">Video Name Eng</label>
                                </div>
                                <span asp-validation-for="VideoNameEng" class="text-danger"></span>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input asp-for="VideoNameArb" type="text" class="form-control" name="VideoNameArb">
                                    <label class="form-label">Video Name Arb</label>
                                </div>
                                <span asp-validation-for="VideoNameArb" class="text-danger"></span>
                            </div>
                           
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input asp-for="EnglishUrl" type="text" class="form-control" name="EnglishUrl">
                                    <label class="form-label">Video Eng Url</label>
                                </div>
                                <span asp-validation-for="EnglishUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input asp-for="ArabicUrl" type="text" class="form-control" name="ArabicUrl">
                                    <label class="form-label">Video Arb Url</label>
                                </div>
                                <span asp-validation-for="ArabicUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group form-float">
                                 
                                    <input type="checkbox" asp-for="IsPublished" id="IsPublished" name="IsPublished">
                                    <label for="IsPublished" class="form-label">IsPublished</label>
                                 
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>

                </form>
            </div>
        </div>
    </div>
</div>
