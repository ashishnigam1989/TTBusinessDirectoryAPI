@model CommonService.RequestModel.CompanyProductRequestModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Add Product</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">Company</li>
                <li class="breadcrumb-item"><a href="@Url.Action("Product", "Company")">All Products</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("AddCompanyProduct", "Company")">Add Product</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Add Product Details</h2>
            </div>
            <div class="body">
                <form id="wizard_with_validation" asp-controller="Company" asp-action="AddUpdateCompanyProduct">
                    <h3>Basic Info</h3>
                    <fieldset>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <select asp-for="CompanyId" name="CompanyId" class="show-tick" required>
                                            <option value="">Select Company</option>
                                            @foreach (var company in @ViewBag.Companies)
                                            {
                                                    <option value="@company.Value">@company.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="NameEng" type="text" class="form-control" name="NameEng" required>
                                        <label class="form-label">NameEng</label>
                                    </div>
                                    <span asp-validation-for="NameEng" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="NameArb" type="text" class="form-control" name="NameArb">
                                        <label class="form-label">NameArb</label>
                                    </div>
                                    <span asp-validation-for="NameArb" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="PartNumber" type="text" class="form-control" name="PartNumber">
                                        <label class="form-label">PartNumber</label>
                                    </div>
                                    <span asp-validation-for="PartNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="number" asp-for="SortOrder" class="form-control" name="SortOrder" id="SortOrder">
                                        <label class="form-label">Sort Order</label>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="number" asp-for="OldPrice" class="form-control" id="OldPrice" name="OldPrice">
                                        <label for="SeoEnabled" class="form-label">Old Price</label>
                                    </div>
                                    <span asp-validation-for="OldPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="number" asp-for="Price" class="form-control" name="Price" id="Price">
                                        <label for="IsPublished" class="form-label">Price</label>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <select asp-for="CountryId" name="CountryId" class="show-tick">
                                            <option value="">Select Country</option>
                                            @foreach (var country in @ViewBag.Countries)
                                            {
                                                    <option value="@country.Value">@country.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line focused">
                                        <input asp-for="OfferStartDate" type="date" class="form-control" name="OfferStartDate">
                                        <label class="form-label">OfferStartDate</label>
                                    </div>
                                    <span asp-validation-for="OfferStartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line focused">
                                        <input asp-for="OfferEndDate" type="date" class="form-control" name="OfferEndDate">
                                        <label class="form-label">OfferEndDate</label>
                                    </div>
                                    <span asp-validation-for="OfferEndDate" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                    </fieldset>
                    <h3>Other Info</h3>
                    <fieldset>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="WarrantyEng" type="text" class="form-control" name="WarrantyEng">
                                        <label class="form-label">WarrantyEng</label>
                                    </div>
                                    <span asp-validation-for="WarrantyEng" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="WarrantyArb" type="text" class="form-control" name="WarrantyArb">
                                        <label class="form-label">WarrantyArb</label>
                                    </div>
                                    <span asp-validation-for="WarrantyArb" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="OffersDescriptionEng" type="text" class="form-control" name="MetaTitleArb">
                                        <label class="form-label">OffersDescriptionEng</label>
                                    </div>
                                    <span asp-validation-for="OffersDescriptionEng" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="OffersDescriptionArb" type="text" class="form-control" name="OffersDescriptionArb">
                                        <label class="form-label">OffersDescriptionArb</label>
                                    </div>
                                    <span asp-validation-for="OffersDescriptionArb" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                           <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="DescriptionEng" type="text" class="form-control" name="DescriptionEng">
                                        <label class="form-label">DescriptionEng</label>
                                    </div>
                                    <span asp-validation-for="DescriptionEng" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="DescriptionArb" type="text" class="form-control" name="DescriptionArb">
                                        <label class="form-label">DescriptionArb</label>
                                    </div>
                                    <span asp-validation-for="DescriptionArb" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="OfferShortDescriptionEng" type="text" class="form-control" name="OfferShortDescriptionEng">
                                        <label class="form-label">OfferShortDescriptionEng</label>
                                    </div>
                                    <span asp-validation-for="OfferShortDescriptionEng" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="OfferShortDescriptionArb" type="text" class="form-control" name="OfferShortDescriptionArb">
                                        <label class="form-label">OfferShortDescriptionArb</label>
                                    </div>
                                    <span asp-validation-for="OfferShortDescriptionArb" class="text-danger"></span>
                                </div>
                            </div>
                        </div>



                    </fieldset>
                    @*<button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>*@

                </form>
            </div>
        </div>
    </div>
</div>