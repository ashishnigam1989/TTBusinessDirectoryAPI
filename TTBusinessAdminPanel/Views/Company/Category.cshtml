
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 


<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Category Management</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Categoryadd", "Company")">Add Category</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <table id="category-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name English</th>
                            <th>Name Arabic</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#category-datatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Company/GetAllCategories",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },
                    { "data": "nameEng", "name": "nameEng", "autoWidth": true },
                    { "data": "nameArb", "name": "nameArb", "autoWidth": true },
                    {
                        "render": function (data, row, d) {
                             // return "";
                            return "<a href='/company/EditCategory/" + d.id + "' class='btn btn-sm btn-raised bg-teal waves-effect' ><i class='material-icons'>mode_edit</i> Edit</a> <button onclick=DeleteCategory(" + d.id + ") class='btn btn-sm btn-raised bg-cyan waves-effect' ><i class='material-icons'>block</i>Delete</button>";
                        }
                    }
                ]
            });
        });

        function DeleteCategory(id) {
            var reqObj = {
                Id: id
            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("DeleteCategory")',
                dataType: 'json',
                data: reqObj,
                success: function (data) {
                    if (data.isSuccess) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!!',
                            text: 'Category Deleted Successfully!!'
                        })
                        location.reload(true);
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!!',
                            text: 'Not changed!!'
                        })
                    }
                },
                error: function (ex) {

                }
            });
        }

    </script>
}