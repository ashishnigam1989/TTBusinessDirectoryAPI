                                                <input asp-for="BannerNameArb" type="text" class="form-control" name="BannerNameArb">
                                                <label class="form-label">BannerNameArb</label>
                                            </div>
                                            <span asp-validation-for="BannerNameArb" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                         <div class="form-group form-float">
                                        <input type="checkbox" asp-for="IsPublished" id="IsPublished" name="IsPublished">
                                        <label for="IsPublished" class="form-label">IsPublished</label>
                                        </div>
