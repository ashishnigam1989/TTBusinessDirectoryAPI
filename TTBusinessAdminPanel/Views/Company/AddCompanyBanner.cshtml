                                                    <input name="file" id="imageArbinput" type="file" multiple />
                                                    <input type="hidden" id="ImageArb" name="ImageArb" asp-for="ImageArb" />
                                                </div>
                                            </div>
                                            <label class="form-label">Arabic Banner</label>

                                        </div>
                                    </div>
                                </div>

                            <button class="btn btn-raised btn-primary waves-effect" style="float:right"  type="submit">SUBMIT</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    <script>
        $(document).ready(function () {
            uploadEngImage();
            uploadArbImage();
            AutofillCompany();
        });

        function uploadEngImage() {
            $('#imageEnginput').change(function () {
                var formdata = new FormData();
                var fileInput = document.getElementById('imageEnginput');
                for (i = 0; i < fileInput.files.length; i++) {
                    formdata.append(fileInput.files[i].name, fileInput.files[i]);
                }
                formdata.append("imgtype", "BannerEng");

                if (fileInput.files && fileInput.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#imgeng').attr('src', e.target.result);
                    };

                    reader.readAsDataURL(fileInput.files[0]);
                }


                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/Upload/Upload');
                xhr.send(formdata);
                xhr.onreadystatechange = function () { 
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        $('#ImageEng').val(JSON.parse(xhr.responseText)[0]);
                    }
                }
                return "";
            });

        }

        function uploadArbImage() {
            $('#imageArbinput').change(function () {
                var formdata = new FormData();
                var fileInput = document.getElementById('imageArbinput');
                for (i = 0; i < fileInput.files.length; i++) {
                    formdata.append(fileInput.files[i].name, fileInput.files[i]);
                }
                formdata.append("imgtype", "BannerArb");
                if (fileInput.files && fileInput.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#imgarb').attr('src', e.target.result);
                    };

                    reader.readAsDataURL(fileInput.files[0]);
                }
                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/Upload/Upload');
                xhr.send(formdata);
                xhr.onreadystatechange = function () {
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        $('#ImageArb').val(JSON.parse(xhr.responseText)[0]);
                    }
                }
                return "";
            });

        }


        function AutofillCompany() {
            $("#companyname").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Company/SearchCompany",
                        type: "GET",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) { 
                                var AC = new Object();
                                AC.label = item.nameEng;
                                AC.value = item.nameEng;
                                AC.id = item.id;
                                return AC
                            }))

                        }
                    })
                },
                select: function (e, i) {
                    $("#CompanyId").val(i.item.id); 
                },
                minLength: 1
            });
        }

    </script>
    }