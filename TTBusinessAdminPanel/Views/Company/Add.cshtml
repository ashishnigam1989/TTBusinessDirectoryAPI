            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("BindRegion")',
                dataType: 'json',
                data: reqObj,
                success: function (data) {
                    $('#RegionId').html('');
                    $.each(data, function (index, value) { 
                        $('#RegionId').append('<option value="' + value.id + '">' + value.nameEng + '</option>');
                    });
                    $('.show-tick').selectpicker('refresh');
                }
            });
        }

