@model CommonService.RequestModel.UserRequestModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Add User</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">User</li>
                <li class="breadcrumb-item"><a href="@Url.Action("Add", "User")">Add User</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Add User</h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="adduserform" asp-controller="User" asp-action="Add">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input asp-for="Name" type="text" class="form-control" name="Name" required>
                                    <label class="form-label">Name</label>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="EmailAddress" type="email" class="form-control" name="EmailAddress" required>
                                    <label class="form-label">User Name</label>
                                </div>
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                        </div>
                       @* <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="Surname" type="text" class="form-control" name="Surname" required>
                                    <label class="form-label">Surname</label>
                                </div>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>*@
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="Mobile" type="text" class="form-control" name="Mobile" required>
                                    <label class="form-label">Mobile</label>
                                </div>
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div>
                                    <select asp-for="Designation" name="Designation" class="show-tick">
                                        <option value="">Select Designation</option>
                                        @foreach (var role in ViewBag.Roles)
                                        {
                                            <option value="@role.Text">@role.Text</option>
                                        }

                                    </select>
                                </div>
                                <span asp-validation-for="Designation" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div>
                                    <select asp-for="RoleId" name="RoleId" class="show-tick">
                                        <option value="">Select Role</option>
                                        @foreach (var role in ViewBag.Roles)
                                        {
                                            <option value="@role.Value">@role.Text</option>
                                        }

                                    </select>
                                </div>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                   @* <div class="row">
                       
                       
                    </div>*@

                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>
