@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>User Management</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">User</li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "User")">View Users</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <table id="user-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>EmailAddress</th>
                            <th>Mobile</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>  
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#user-datatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/User/LoadUser",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },
                    { "data": "name", "name": "Name", "autoWidth": true },
                    { "data": "rolename", "name": "Role", "autoWidth": true },
                    { "data": "emailAddress", "name": "Email Address", "autoWidth": true },
                    { "data": "mobile", "name": "Mobile", "autoWidth": true },
                    { "data": "isActive", "name": "Is Active", "autoWidth": true, "render": function (data, row, d){ return d.isActive==true?"Approved":d.isActive==false?"Rejected":"pending"} },
                    
                    {
                        "render": function (data,row,d) {
                            return "<a href='/User/Edit/" + d.id + "' class='icon' title='Edit'><i class='zmdi zmdi-edit'></i></a> | " + 
                            "<a href='#' onclick=Approve(" + d.id + ",'approve') class='icon' style='color:green' title='Approve'><i class='zmdi zmdi-assignment-check'></i></a> | " + 
                            "<a href='#' onclick=Approve(" + d.id + ",'reject') class='icon' style='color:red' title='Reject'><i class='zmdi zmdi-close-circle'></i></a>";
                        }
                    }
                ]
            });
        });

        function Approve(id,status) {
            var reqObj={
                Id: id,
                Status:status
            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ApproveRejectUser")',
                dataType: 'json',
                data: reqObj,
                success: function (data) {
                    if (data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!!',
                            text: 'Status changed successfully!!'
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!!',
                            text: 'Not changed!!'
                        })
                    }
                },
                error: function (ex) {

                }
            });
        }
    </script>
}


