@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>User Management</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Add", "User")">Add User</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <table id="user-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>EmailAddress</th>
                            <th>Mobile</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @*<tbody>
                        @foreach (var item in Model.UserList)
                        {
                            <tr>
                                <td>@item.Name.</td>
                                <td>System Architect</td>
                                <td>Edinburgh</td>
                                <td>61</td>
                                <td>2011/04/25</td>
                                <td>320,800</td>
                            </tr>
                        }
                    </tbody>*@
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#user-datatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/User/LoadUser",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },
                    { "data": "name", "name": "Name", "autoWidth": true },
                    { "data": "rolename", "name": "Role", "autoWidth": true },
                    { "data": "emailAddress", "name": "Email Address", "autoWidth": true },
                    { "data": "mobile", "name": "Mobile", "autoWidth": true },
                    { "data": "isActive", "name": "Is Active", "autoWidth": true },
                    
                    {
                        "render": function (data,row) { return "<a href='#' class='btn btn-primary' onclick=DeleteCustomer('" + row.id+ "'); >Edit</a>";   }
                    },
                ]
            });
        });  
    </script>
}


