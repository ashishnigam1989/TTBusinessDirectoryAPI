
@{
    ViewData["Title"] = "Region";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-10 col-md-10 col-sm-10 float-left">
                <h2>Regions</h2>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 float-right">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("RegionAdd", "Home")" class="btn btn-raised btn-warning waves-effect">Add Region</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <table id="region-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Country Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#region-datatable").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Home/GetRegions",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },
                    { "data": "nameEng", "name": "nameEng", "autoWidth": true },
                    { "data": "countryNameEng", "name": "countryNameEng", "autoWidth": true },
                    {
                        "render": function(data, row, d) {
                            return "<a href='~/Home/EditRegion/" + d.Id + "' class='icon' title='Edit'><i class='zmdi zmdi-edit'></i></a> | " + 
                            "<a href='#' onclick=DeleteCompany(" + d.Id + ") class='icon' title='Delete'><i class='zmdi zmdi-delete'></i></a>";
                        }
                    }
                ]
            });
        });

    </script>
}

